<%= form_with(model: appointment, local: true, class: "form-horizontal") do |form| %>
  <% if appointment.errors.any? %>
    <div id="error_explanation" class="alert-danger">
      <h2><%= pluralize(appointment.errors.count, "error") %> prohibited this appointment from being saved:</h2>

      <ul>
      <% appointment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :reason, class: "control-label col-sm-2", for: "appointment_reason" %>
    <div class="col-sm-10">
      <%= form.text_field :reason, id: :appointment_reason, class: "form-control", required: true %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :date, class: "control-label col-sm-2", for: "appointment_date" %>
    <div class="col-sm-10">
      <%= form.text_field :date, id: :appointment_date, class: "form-control", required: true %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :start_time, class: "control-label col-sm-2", for: "appointment_start_time" %>
    <div class="col-sm-10">
      <%= form.text_field :start_time, id: :appointment_start_time, class: "form-control", required: true %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :end_time, class: "control-label col-sm-2", for: "appointment_end_time" %>
    <div class="col-sm-10">
      <%= form.text_field :end_time, id: :appointment_end_time, class: "form-control", required: true %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-6"><%= link_to 'Back', root_path, class: "btn btn-default" %></div>
    <div class="col-sm-6"><%= form.submit class: "btn btn-success" %></div>
  </div>
<% end %>


<% content_for :javascript do %>
  <script>
    $(document).ready(function() {

      $('#appointment_date').datetimepicker({
        format: "MM/DD/YYYY",
        defaultDate: <%= @clicked_date %>,
      });

      $('#appointment_start_time').datetimepicker({
        format: "LT",
        defaultDate: new Date()
      });

      $('#appointment_end_time').datetimepicker({
        format: "LT",
        defaultDate: new Date()
      });


    });
  </script>
<% end %>
