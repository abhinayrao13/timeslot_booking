<div id='calendar'></div>


<% content_for :javascript do %>
<script>
  $(document).ready(function() {
    $('#calendar').fullCalendar({
      header: {
				left: 'prev,next today',
				center: 'title',
				right: 'month,basicWeek,basicDay,basicThreeMonths'
			},
      views: {
        basicThreeMonths: {
          type: 'basic',
          duration: { months: 3 },
          buttonText: '3 Months'
        }
      },
      editable: true,
			eventLimit: true, // allow "more" link when too many events
      events: <%= @appointment_events %>,
      dayClick: function(clickedDate) {
        window.location = "/appointments/new?click=" + clickedDate;
      }
    });
  });
</script>
<% end %>
